<% layout('layouts/boilerplate')%>

<h1 style="text-align: center; margin-bottom: 20px;">Personality Test</h1>

<form action="/personality" method="POST">
    <table class="table table-striped">
        <tbody>
            <% var i = 0 %>
            <% for (let q of questions) { %>
                <tr>
                    <th scope="row"><%= i+1 %> </th>
                    <td><%= q.question %></td>
                    <td>
                        <select name="personality[answer]" id="answer">
                            <option value="Y">Yes</option>
                            <option value="N">No</option>
                        </select>
                    </td>
                    <td style="display: none;">
                        <input type="text" name="personality[question]" value="<%=q.question %>">
                    </td>
                    <td style="display: none;">
                        <input type="text" name="personality[category]" value="<%=q.category %>">
                    </td>
                </tr>
                <% i += 1 %>
            <% }%>
        </tbody>
    </table>
    <input type="submit" class="btn btn-primary">
</form>